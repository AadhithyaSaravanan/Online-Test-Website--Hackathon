@model IEnumerable<Mark2MVC.Models.Course>

    @{
        ViewData["Title"] = "CourseIndex";
    }

    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <!-- Include Custom CSS -->
    <style>
        body {
        background-image: url('https://4kwallpapers.com/images/walls/thumbs_2t/2868.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            gap: 20px;
            margin-top: 20px;
      
        }

        .card {
            width: 200px;
            height: 300px;
            perspective: 1000px;
            cursor: pointer;
            transition: transform 0.8s;
        background: linear-gradient(to bottom, #FFDAB9, #FFB6C1);
        }

        .card-inner {
            width: 100%;
            height: 100%;
            transform-style: preserve-3d;
            transition: transform 0.8s;
        }

        .card:hover .card-inner {
            transform: rotateY(180deg);
        }

        .card-front,
        .card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: rgba(255, 255, 255, 0.8);
        }

        .card-back {
         transform: rotateY(180deg);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: linear-gradient(to bottom right, #ADD8E6, #90EE90); /* Gradient background color (Light Blue to Light Green) */
        /* Gradient background color */
        color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
        }

        .card-back a {
            margin-bottom: 10px; /* Add margin between buttons */
            text-decoration: none;
            color: white;
            /* Button background color */
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .card-back a:hover {
                background-color: #45a049; /* Darker green on hover */
            }

        .icon {
            margin-right: 5px;
        }

    .card-front {
        /* ... (previous styles) ... */
        background: linear-gradient(to bottom, #FFDAB9, #FFB6C1); /* Mild linear gradient background for the card */
        /* Linear gradient background for the card */
        padding: 20px;
        border-radius: 20px; /* Rounded corners for the card front */
        display: flex;
        flex-direction: column;
        align-items: center;
        /* ... (other styles) ... */
    }

    .card-img-top {
        width: 120px; /* Set the width of the card image */
        height: 120px; /* Set the height of the card image */
        object-fit: cover; /* Maintain aspect ratio and cover the container */
        border-radius: 50%; /* Make the image round */
        margin-bottom: 20px; /* Add space between the image and text */
        border: 3px solid white; /* Add a white border around the circular image */
    }


    </style>

    <div class="container mt-5">
    <p>
        <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
        <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Back to Admin</a>
    </p>

        <div class="card-container">
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-inner">
                        <div class="card-front">
                            <!-- Front Content: Image and Description -->
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" alt="Course Image" class="card-img-top" />
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.CourseName)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                        </div>
                        <div class="card-back">
                            <!-- Back Content: Buttons -->
                            <a href="@Url.Action("Edit", new { id = item.CourseId })" class="btn btn-primary"><i class="fas fa-edit icon"></i>Edit</a>
                            <a href="@Url.Action("Details", new { id = item.CourseId })" class="btn btn-secondary"><i class="fas fa-info-circle icon"></i>Details</a>
                            <a href="@Url.Action("Delete", new { id = item.CourseId })" class="btn btn-danger"><i class="fas fa-trash icon"></i>Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

<script>
    // Get all the cards
    const cards = document.querySelectorAll('.card');

    // Function to flip the card
    function flipCard() {
        this.classList.toggle('flipped');
    }

    // Attach click event listener to each card
    cards.forEach(card => card.addEventListener('click', flipCard));
</script>



