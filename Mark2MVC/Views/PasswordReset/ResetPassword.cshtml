@model Mark2MVC.Models.User.ConfirmReset

@{
    ViewData["Title"] = "Reset Password";
}

<style>
    body {
        background-image: url('https://images.pexels.com/photos/552791/pexels-photo-552791.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        color: #2C3E50;
    }

    .reset-password-container {
        background-color: rgba(255, 255, 255, 0.9); /* Semi-transparent white background */
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.3); /* Light shadow effect */
        text-align: center;
        margin-top: 50px;
        max-width: 400px; /* Set maximum width for the form container */
        margin-left: auto;
        margin-right: auto;
    }

    .form-group input[type="password"] {
        width: calc(100% - 24px); /* Subtract padding and border width */
        padding: 12px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        text-align: center;
        box-sizing: border-box; /* Include padding and border in the element's total width and height */
    }

    .form-group input[type="submit"] {
        width: calc(100% - 24px); /* Subtract padding and border width */
        background-color: #3498db; /* Soft blue button color */
        border: none;
        border-radius: 5px;
        padding: 10px; /* Adjust vertical padding */
        margin-top: 10px; /* Adjust top margin */
        color: white;
        cursor: pointer;
        transition: background-color 0.3s ease;
        font-size: 16px;
        box-sizing: border-box; /* Include padding and border in the element's total width and height */
    }

        .form-group input[type="submit"]:hover {
            background-color: #2980b9; /* Darker blue hover effect for the submit button */
        }
</style>

<div class="reset-password-container">
    <h2>Reset Password</h2>
    @if (TempData["ResetPasswordMessage"] != null)
    {
        <div class="alert alert-success">@TempData["ResetPasswordMessage"]</div>
        <script>
            // Redirect to the login page after a 5-second delay
            setTimeout(function () {
                window.location.href = '@Url.Action("Login", "User")';
            }, 5000); // 5000 milliseconds (5 seconds)
        </script>
    }
    else
    {
        <form asp-action="ResetPassword" method="post">
            <div class="form-group" hidden>
                <input asp-for="Email" placeholder="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" placeholder="New Password" type="password" class="form-control" style="width: 100%" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" placeholder="Confirm New Password" type="password" class="form-control" style="width: 100%" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Reset Password" class="btn btn-primary" style="width: 100%" />
            </div>
        </form>
    }
</div>






