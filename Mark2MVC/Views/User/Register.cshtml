                             asp-refresh-button-class="fas fa-redo btn-sm"
                             asp-use-noise="false">
                </dnt-captcha>
            </div>

            <div class="form-group col-md-12">
                <br><center> <button type="submit" class="btn btn-primary register-button"> <i class="bi bi-envelope"></i> Register</button> </center>
            </div>

            <div>
                <br /><center> <a asp-action="Login">Already have a Account</a> </center>
            </div>
        </form>
    }
</div>

