    /* Custom CSS for the registration form */
    .registration-form {
        background-color: rgba(255, 255, 255, 0.6); /* Added transparency */
        padding: 20px;
        border-radius: 5px;
        margin-top: 20px;
        box-shadow: 0 0 40px 20px black; /* glowing effect in white */
        color: white;
        transition: all 0.3s ease; /* Add transition for smooth effect */
    }

        .registration-form:hover {
            background-color: rgba(23, 23, 23, 0.5); /* Darken the background color on hover */
            box-shadow: 0 0 40px 20px rgba(255, 255, 255, 0.5);
            transform: scale(0.95);
        }

    .form-control-label {
        font-weight: bold;
    }

    .form-control {
        border: 1px solid #ccc;
        margin: 5px 0;
    }

        .form-control:focus {
            border-color: lightblue;
            box-shadow: 0 0 5px lightblue;
        }

    .register-button {
        background-color: #007bff;
        color: white;
        font-weight: bold;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
    }

        .register-button:hover {
            background-color: #0056b3;
        }

    /* Styling for captcha input */
    .form-group.col-md-6.dnt-captcha input[type="text"] {
        background-color: transparent;
        border: 1px solid #ccc;
        margin: 5px 0;
    }

        .form-group.col-md-6.dnt-captcha input[type="text"]:focus {
            border-color: lightblue;
            box-shadow: 0 0 5px lightblue;
        }

    .form-control.select-wrapper {
        position: relative;
        width: 100%;
    }

        /* Style for the actual select element */
        .form-control.select-wrapper select {
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            padding: 10px;
            width: 100%;
            cursor: pointer;
            border: 1px solid #ccc;
            border-radius: 5px;
            background: transparent;
            background-image: linear-gradient(45deg, transparent 50%, #ccc 50%), linear-gradient(135deg, #ccc 50%, transparent 50%);
            background-position: calc(100% - 20px) calc(1em + 2px), calc(100% - 15px) calc(1em + 2px);
            background-size: 5px 5px, 5px 5px;
            background-repeat: no-repeat;
            margin-top: 5px;
            font-size: 16px;
        }

            /* Style for the select dropdown when focused */
            .form-control.select-wrapper select:focus {
                outline: none;
                border-color: lightblue;
                box-shadow: 0 0 5px lightblue;
            }


    .select-with-arrow {
        position: relative;
    }

        .select-with-arrow::after {
            content: "\25BE"; /* Downward arrow character */
            font-size: 14px; /* Adjust size as needed */
            position: absolute;
            top: calc(50% - 6px); /* Adjust vertical positioning */
            right: 10px; /* Adjust horizontal positioning */
            pointer-events: none;
            color: #555; /* Adjust color */
        }

