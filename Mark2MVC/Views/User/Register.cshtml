        };

        // Populate cities based on the selected state
        if (cities[selectedState]) {
            cityInput.innerHTML = ''; // Clear previous options

            cities[selectedState].forEach(function (city) {
                var option = document.createElement("option");
                option.value = city;
                option.text = city;
                cityInput.appendChild(option);
            });
        }
    }

    // Attach the populateCities function to the change event of the State dropdown
    document.getElementById("State").addEventListener("change", populateCities);

    // Populate cities for the initial state on page load
    populateCities();
</script>

